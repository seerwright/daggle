# Daggle Backend Environment Variables

# Application
APP_NAME=Daggle API
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/daggle

# Authentication
JWT_SECRET=change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# CORS (JSON array of allowed origins)
CORS_ORIGINS=["http://localhost:4200"]

# Logging
LOG_LEVEL=INFO
